<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
</head>
<body>
	<header>
		<% include ../partials/session_header %>
	</header>
	<main>

		<h2>All Current Projects</h2>
		<% projects.forEach( function (project) { %>
			<h3 class="showDescription"><%= project.title %></h3>
				<div id="projectDescription" class="hidden">
					<p><%= project.description %></p>
					<% if (project.open) { %>
						<a href="/projects/<%= project._id %>">View Project . . .</a>
					<% } else { %> 
						<p><em>Private Project</em></p>
					<% } %>
				</div>
		<% }) %>

	</main>
	<% include ../partials/footer %>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="/plotly-latest.min.js"></script>
	<script src="/app.js"></script>
</body>
</html>