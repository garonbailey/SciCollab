<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
</head>
<body>
	<header>
		<% include ../partials/session_header %>
	</header>
	<main>

		<h2>All Scientists</h2>
		<% users.forEach(function (user) { %>
			<h3><a href="users/<%= user._id %>"><%= user.firstname %> <%= user.lastname %></a></h3>
				<p><%= user.organization %>, <% if (user.field === "biology") { %>
													Biologist
												<% } else if (user.field === "chemistry") { %>
													Chemist
												<% } else if (user.field === "physics") { %>
													Physicist
												<% } else if (user.field === "geology") { %>
													Geologist
												<% } %>
												</p>
		<% }); %>

	</main>
	<% include ../partials/footer %>
	<% include ../partials/scripts %>
</body>
</html>